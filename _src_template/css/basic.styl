html
	background url( "../img/background.jpg" )

body
	padding-top 0px
	padding-bottom 0
	margin 0
	background-color transparent
	font-family Helvetica Neue
	font-weight 300

.container
	overflow hidden

h3.lead
	font-size 40px
	padding 0
	font-weight 100
	text-align center
	white-space nowrap
	overflow hidden
	text-overflow ellipsis

.jumbotron
	margin 50px 0 20px
	text-align center

header
	h1
	h3
		font-family 'Qwigley', Helvetica Neue
		text-align center
		margin 10px 0
	h1
		font-size 70px
		font-weight 100
		font-style italic

	h3
		font-size 30px	
		font-weight 300

footer
	background-color #ed2cb5
	text-align center
	margin 10px -15px 0
	font-weight 100
	padding 2px 0
	p
		font-size 18px
		padding 5px 0
		border-top 2px dashed rgba( white, .7 )
		border-bottom 2px dashed rgba( white, .7 )
		display block
		margin 2px 0
		color white
		font-family 'Qwigley', Helvetica Neue