.files
	margin 10px 0 20px 1%

.file
	margin 5px 1% 5px 0
	border-radius 5px
	background-color #fff
	background-size cover
	background-repeat no-repeat
	background-position center
	padding 0 0px 0
	position relative
	overflow hidden
	width 32%
	height 220px
	box-shadow 0 2px 2px rgba( black, .5 )
	float left

	video
		width 100%
		
	.ribbon
		background-color #ed2cb5
		padding 3px 0
		margin 0 -3px
		border-radius 2px
		transform rotate( 40deg )
		width 230px
		position absolute
		right -35px
		top 45px
		box-shadow 0 2px 2px rgba( black, .5 )

		span.old
		span.date
			text-align center
			display block
			color #fff
			border-top 2px dashed rgba( white, .7 )
			border-bottom 2px dashed rgba( white, .7 )
			padding 0 15px
			font-size 13px
			line-height 17px
		span.date
			display none
			font-size 11px


	.caption
		display none
		position absolute
		bottom 0
		left 0
		right 0
		opacity .3
		background rgba( black, .7 )
		padding 10px 15px

		h3
			font-family 'Qwigley', Helvetica Neue
			font-size 16px
			line-height 20px
			margin 0 0 10px
			font-weight 600
			margin 0
			color white
		p
			color white
			font-weight 300

.file:hover
	.ribbon
		span.old
			display none
		span.date
			display block
	.caption
		opacity .8

@media( max-width: 767px )
	.files
		margin 10px 0 20px 0

	.file
		margin 5px 0 30px 0
		width 100%
		height 300px

.file.fullview
	background-color black
	background-repeat no-repeat
	background-position center
	background-size contain
	bottom 0
	height 100%
	width 100%
	float none
	left 0
	position fixed
	right 0
	top -5px
	z-index 1

	.caption
		display block

