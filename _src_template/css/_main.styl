@import url( "http://fonts.googleapis.com/css?family=Qwigley|Dr+Sugiyama" )
@import "bootstrap.css"

@import "basic"

@import "decrypt"


.container-narrow
	margin 0 auto
	max-width 700px

.container-narrow > hr
	margin 30px 0

.jumbotron
	margin 50px 0 20px
	text-align center

.jumbotron h1
.jumbotron p
	font-family 'Dr Sugiyama'

.jumbotron h1
	font-size 70px

.jumbotron p
	font-size 30px

.topribbon
	position fixed
	top 0
	right 0

.ribbon
	background-color #ed2cb5
	padding 3px 0
	span
		display block
		height 20px
		border-top 1px dashed rgba( white, .7 )
		border-bottom 1px dashed rgba( white, .7 )

.post
	.postimg
		width 100%
		max-width 700px
		img
			width 100%
			display block