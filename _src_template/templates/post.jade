.file( id=id, style="background-image:url(" + filename + ")" )
	if( _old && _date )
		.ribbon
			span.old= _old
			span.date= _date

	.image
		case mime
			when "video/quicktime"
				video( controls )
					source( src=filename )
	.caption
		.caption-inner
			h3= post.subject
			if( post.text.length )
				p.content= post.text